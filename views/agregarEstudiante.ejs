<div class="contailer">
        <form method="Post" action="/Estudiante/Agregar">
            <div class="row justify-content-md-center">
                <div class="col-6">
                    <b>Nombre del Estudiante</b>
                    <input class="form-control" name="nombreestudiante" type="text" placeholder="nombre del Estudiante">
                    </br>
                    <b>Apellido del Estudiante</b>
                    <input class="form-control" name="apellidoestudiante" type="text" placeholder="apellido del Estudiante">
                    </br>
                    <b>Edad del Estudiante</b> 
                    <input class="form-control col-4" type="number" min="0" max="115" name="edadestudiante" placeholder="Ingrese la edad del estudiante">
                    </br>
                    <b>Promedio del Estudiante</b> 
                    <input class="form-control col-4" type="number" step="any" name="promedioestudiante" placeholder="Ingrese el promedio del estudiante">
                    </br>
                </div>
            </div>
            <div class="text-right">
                <button type="reset" class="btn btn-success">
                    Resetear formulario
                    <i class="glyphicon glyphicon-menu-right"></i>
                  </button>
              <button type="submit" class="btn btn-success">
                Registrar Estudiante
                <i class="glyphicon glyphicon-menu-right"></i>
              </button>
            </div>
        </form>
    </div>